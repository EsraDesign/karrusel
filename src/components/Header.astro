---
import MainLayout from "../layouts/MainLayout.astro";
---

<header class="mainNav">
  <a href="index.html"><h1>KARRUSEL</h1></a>
  <nav>
    <a class="navKnap" href="kategori.html">BUY TICKETS</a>
    <a class="navKnap" href="kategori.html">LINE-UP</a>
    <a class="navKnap" href="kategori.html">MAP</a>
  </nav>
  <slot />
</header>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: Arial, Helvetica, sans-serif;
  }

  header {
    position: sticky;
    top: 0; /* Sticks at the top */
    z-index: 1000;
    padding: 10px;
    background-color: rgba(45, 0, 79, 1);
  }

  .mainNav h1 span {
    display: inline-block;
    transform: scaleX(-1) translateX(-0.2rem);
    color: var(--off-color);
  }
  .mainNav > * {
    margin: 0;
  }
  @media screen and (min-width: 700px) {
    .mainNav {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
  }

  .mainNav h1 {
    margin-right: auto;
  }

  .mainNav > a {
    display: block;
  }

  a {
    text-decoration: none;
  }

  .navKnap {
    color: white;
    border-radius: 10px;
    margin: 25px;
    padding: 15px;
  }

  .navKnap:hover {
    border: solid #ff1040;
    transition: 0.1s ease-in-out;
  }
</style>
